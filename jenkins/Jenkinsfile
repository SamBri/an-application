// Jenkinsfile (Declarative Pipeline)
pipeline {
   agent any
   
   
   stages {
      stage('Build') {
         steps {
            echo 'Building stage'
            bat 'mvn compile'
            bat 'mvn package'
            
         }
      }
      
      stage('Deliver') {
         when {
            expression {
               currentBuild.result == null || currentBuild.result == 'SUCCESS'
            }
         }
         
         steps {
            echo 'Deploying stage'
            // run bat file
            bat '.\\jenkins\\scripts\\deliver.bat'

         }
      }
      
   }
   
}