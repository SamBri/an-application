// Jenkinsfile (Declarative Pipeline)
pipeline {
   agent any
   
   
   stages {
      stage('Build') {
         steps {
            echo 'Building stage'
            sh 'mvn compile'
            sh 'mvn package'
            
         }
      }
      
      stage('Deploy') {
         when {
            expression {
               currentBuild.result == null || currentBuild.result == 'SUCCESS'
            }
         }
         
         steps {
            echo 'delivering app for deployment'
            sh 'scp -i /.ssh/id_rsa ./target/application-1.0.jar appuser@192.168.0.190:/apps/'
            sh 'ssh appuser@192.168.0.190 "nohup java -jar /apps/application-1.0.jar  &"'
            
            
         }
      }
      
   }
   
   }
   
